<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="p">
	
	<!-- 상품 전체 조회 -->
	<select id="product_list" resultType="product">
		select p_name from TB_product
	</select>
	
	<!-- 카테고리별 검색 -->
	<select id="category" parameterType="int" resultType="product">
		
	</select>
	
	<!-- 상품등록 -->
	<insert id="p_insert" parameterType="product">
		insert into tb_product values(
			seq_product_num.nextval,
			#{p_name},
			#{p_id},
			#{p_price},
			#{p_explain},
			#{p_size},
			#{p_color},
			#{p_pabric},
			#{p_picture},
			#{picture_count}
		)
	</insert>
	
</mapper>












